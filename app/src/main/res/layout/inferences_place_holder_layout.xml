<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/image_place_holder"
        android:background="@color/placeholder_bg"
        />

    <View
        android:layout_width="70dp"
        android:layout_height="15dp"
        tools:text="Male"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_place_holder"
        android:layout_marginStart="16dp"
        android:id="@+id/gender_place_holder"
        android:background="@color/placeholder_bg"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-medium"
        />

    <View
        android:layout_width="100dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@id/gender_place_holder"
        app:layout_constraintStart_toStartOf="@id/gender_place_holder"
        android:background="@color/placeholder_bg"
        android:id="@+id/emotion"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        />
</androidx.constraintlayout.widget.ConstraintLayout>