    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_bg"
    android:padding="1dp"
    tools:context=".ui.PreviewImageDialogFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_clear"
        android:tint="#000000"
        app:backgroundTint="#2DDFEDF1"
        app:fabSize="mini"
        app:layout_constraintStart_toStartOf="@id/dialog_preview_image"
        app:layout_constraintTop_toTopOf="@id/dialog_preview_image" />

    <ImageView
        android:id="@+id/dialog_preview_image"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/steam"
        />

